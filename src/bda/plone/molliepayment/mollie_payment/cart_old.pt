<div id="cart"
      class="cart_tickets"
     i18n:domain="bda.plone.cart"
     tal:define="tickets python: True;
                pre_cart_text python: view.get_pre_cart(True);
                post_cart_text python: view.get_post_cart(True);">

  <div class="tickets-breadcrumbs">
      <a href=""
       class="btn step step-1 selected" type="button" i18n:translate="">1. Tickets</a>

      <a href=""
       class="btn disabled step step-2" type="button" i18n:translate="">2. Person details</a>

      <a href=""
       class="btn disabled step step-3" type="button" i18n:translate="">3. Verify details</a>

      <a href=""
       class="btn disabled step step-4" type="button" i18n:translate="">4. Payment</a>
  </div>

  <div class="pre-cart" tal:condition="pre_cart_text" id="parent-fieldname-text">
    <p tal:content="structure python: pre_cart_text.output_relative_to(context.view)"></p>
  </div>

  <div class="summary_item summary_item_tickets">
    <ul class="cart_item_content cart_item_content_tickets">
      <li i18n:translate="" class="type-ticket">Ticket type</li>
      <li i18n:translate="" class="price">Price</li>
      <li i18n:translate="" class="quantity">Amount</li>
      <li i18n:translate="" class="subtotal">Subtotal</li>
    </ul>
  </div>

  <table>
        <thead>
          <tr>
            <th>Ticket type</th>
            <th>Price</th>
            <th>Amount</th>
            <th>Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <tr class="cart_item summary_item cart_item_content">

            <td><span class="cart_item_title">Entree volwassene</span></td>
            <td>
              <span class="price original">
                <span class="cart_item_original_price">
                  € 17.50
                </span>
              </span>
            </td>
            <td></td>
            <td>€ 0.00</td>
          </tr>
        </tbody>
      </table>
  
  <span style="display:none;"
        class="cart_execution_context">summary</span>

  <span id="cart_item_template" style="display: none;"
    tal:define="currency view/currency">
    
    <div class="cart_item summary_item">
      <ul class="cart_item_content">
        <li>
          <h4>
            <span class="cart_item_title">Title</span>
          </h4>
        </li>
        <li>
          <span class="price original">
            <span class="cart_item_original_price">Price</span>&nbsp;<span tal:content="currency">EUR</span>
          </span>
        </li>
        <li>
          <span class="cart_item_uid" style="display: none;">uid</span>
          <span class="cart_item_comment" style="display: none;">comment</span>

            <select class="select form-control cart_item_count cart_tickets">
              <option value="0">0</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
              <option value="10">10</option>
              <option value="11">11</option>
              <option value="12">12</option>
              <option value="13">13</option>
              <option value="14">14</option>
              <option value="15">15</option>
            </select>
        
          <a href=""
             class="update_cart_item update_cart_action"
             title="Update cart"
             i18n:attributes="title update_cart">&nbsp;</a>
        </li>
        <li>
          <span class="cart_item_uid" style="display: none;">uid</span>
          <span class="cart_item_comment" style="display: none;">comment</span>
          <span class="cart_item_count" style="display: none;">0</span>
          <a href=""
             class="update_cart_item remove_from_cart_action"
             title="Remove from cart"
             i18n:attributes="title remove_from_cart">&nbsp;</a>
        </li>
        <li>
          <span class="price cart_tickets">
            <span class="cart_item_price">Price</span>&nbsp;<span tal:content="currency">EUR</span>
          </span>
        </li>
      </ul>



      <div class="visualClear"></div>
    </div>
  </span>

  <div id="cart_items" style="display: none;"></div>

  <div id="cart_no_items" style="display: none;">
    <p i18n:translate="empty_cart">Cart is empty</p>
  </div>

  <div id="cart_summary" style="display: none;" class="summary_wrapper">
    <table class="cart_sum_content"
           tal:define="currency view/currency">
      <tal:details condition="not:view/summary_total_only">
        <tr class="discount" style="display: none;">
        </tr>
        <tr class="discount" style="display: none;">
        </tr>
      </tal:details>
      <tr class="discount" style="display: none;">
      </tr>
      <tr class="shipping" style="display: none;">
      </tr>
      <tr>
        <td><strong i18n:translate="summary_total">Total:</strong></td>
        <td><strong class="cart_total">Total</strong></td>
        <td class="ticket-currency" tal:condition="currency">
          <strong tal:content="currency">EUR</strong>
        </td>
      </tr>
    </table>
    <div class="visualClear"></div>
  </div>

  <div class="cart_summary_buttons">
    <a href="@@checkout"
       class="cart_checkout_button btn prevent_if_no_longer_available"
       tal:define="checkout_url view/checkout_url"
       tal:attributes="href python: '@@checkout'"
       i18n:translate="checkout" type="button">Checkout</a>
  </div>

  <div class="post-cart" tal:condition="post_cart_text">
    <p tal:content="structure python: post_cart_text.output_relative_to(context.view)"></p>
  </div>


</div>
